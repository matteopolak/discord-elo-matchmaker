{
	"compilerOptions": {
		"target": "esnext",
		"experimentalDecorators": true,
		"module": "commonjs",
		"baseUrl": "./src",
		"paths": {
			"@util/*": ["util/*"],
			"@structs/*": ["structures/*"],
			"@handlers/*": ["handlers/*"],
			"@providers/*": ["providers/*"],
			"@managers/*": ["managers/*"]
		},
		"outDir": "./build",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
